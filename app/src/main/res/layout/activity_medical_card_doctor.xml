<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/medicalCardPatientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/medicalCardDiagnosis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Diagnosis" />

    <EditText
        android:id="@+id/medicalCardMedications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Medications" />

    <EditText
        android:id="@+id/medicalCardTreatment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Treatment Plan" />

    <EditText
        android:id="@+id/medicalCardNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Doctor Notes" />

    <Button
        android:id="@+id/saveMedicalCardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Medical Card" />

</LinearLayout>
