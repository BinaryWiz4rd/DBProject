<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorCalendarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/eclinic_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor's Calendar"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:background="@drawable/rounded_frame_background">

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:dateTextAppearance="@android:style/TextAppearance.Material.Medium"
                android:weekDayTextAppearance="@android:style/TextAppearance.Material.Medium"
                android:showWeekNumber="false" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/addAppointmentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Appointment"
            android:backgroundTint="@color/teal_700"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <ListView
            android:id="@+id/appointmentsListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />

    </LinearLayout>

</FrameLayout>
